<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Invoice Form View to Add Meter Reading Columns -->
    <record id="view_move_form_inherit_meter" model="ir.ui.view">
        <field name="name">account.move.form.inherit.meter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add meter reading fields after name field in invoice lines -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="after">
                <field name="meter_previous" optional="show" string="Previous"/>
                <field name="meter_new" optional="show" string="New"/>
                <field name="meter_actual" optional="show" string="Actual"/>
                
            </xpath>
        </field>
    </record>
</odoo>
