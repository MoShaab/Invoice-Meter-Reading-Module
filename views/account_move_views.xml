<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_line_form_inherit_meter" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.meter</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="meter_previous" optional="show"/>
                <field name="meter_new" optional="show"/>
                <field name="meter_actual" optional="show"/>
            </xpath>
            
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree_inherit_meter" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.meter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">state == 'draft'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
